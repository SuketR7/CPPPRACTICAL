//string manipulation
#include <iostream>
#include <cstring>
using namespace std;

void showAddress(const char* str) {
    for (int i = 0; str[i] != '\0'; i++) {
        cout << "Character: " << str[i] << ", Address: " << (void*)&str[i] << endl;
    }
}

void concatenate(char* str1, const char* str2) {
    int i = 0, j = 0;
    while (str1[i] != '\0') i++;
    while (str2[j] != '\0') str1[i++] = str2[j++];
    str1[i] = '\0';
}

int compare(const char* str1, const char* str2) {
    int i = 0;
    while (str1[i] != '\0' && str2[i] != '\0') {
        if (str1[i] != str2[i]) return (str1[i] - str2[i]);
        i++;
    }
    return (str1[i] - str2[i]);
}

int length(const char* str) {
    int len = 0;
    while (str[len] != '\0') len++;
    return len;
}

void toUpperCase(char* str) {
    for (int i = 0; str[i] != '\0'; i++) {
        if (str[i] >= 'a' && str[i] <= 'z') {
            str[i] = str[i] - 'a' + 'A';
        }
    }
}

void reverseString(char* str) {
    int len = length(str), start = 0, end = len - 1;
    while (start < end) {
        char temp = str[start];
        str[start] = str[end];
        str[end] = temp;
        start++;
        end--;
    }
}

void insertString(char* str1, const char* str2, int position) {
    int len1 = length(str1), len2 = length(str2);
    for (int i = len1; i >= position; i--) {
        str1[i + len2] = str1[i];
    }
    for (int i = 0; i < len2; i++) {
        str1[position + i] = str2[i];
    }
}

int main() {
    char str1[100], str2[50];
    
    // Input for strings
    cout << "Enter the first string: ";
    cin.getline(str1, 100);
    cout << "Enter the second string: ";
    cin.getline(str2, 50);

    cout << "\nOriginal String: " << str1 << endl;

    cout << "\nAddresses of characters:" << endl;
    showAddress(str1);

    cout << "\nConcatenating second string to the first:" << endl;
    concatenate(str1, str2);
    cout << "Result: " << str1 << endl;

    cout << "\nComparing with the second string:" << endl;
    int cmp = compare(str1, str2);
    if (cmp == 0) cout << "Strings are equal" << endl;
    else if (cmp < 0) cout << "First string is less than the second" << endl;
    else cout << "First string is greater than the second" << endl;

    cout << "\nLength of the concatenated string: " << length(str1) << endl;

    cout << "\nConverting the concatenated string to uppercase:" << endl;
    toUpperCase(str1);
    cout << "Result: " << str1 << endl;

    cout << "\nReversing the string:" << endl;
    reverseString(str1);
    cout << "Result: " << str1 << endl;

    cout << "\nInserting second string into the reversed string at position 3:" << endl;
    insertString(str1, str2, 3);
    cout << "Result: " << str1 << endl;

    return 0;
}
